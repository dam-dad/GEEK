<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="view" prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane fx:id="contentContainer" minWidth="180.0" prefWidth="180.0">
         <center>
            <VBox focusTraversable="true" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXTextArea fx:id="contentTextArea" promptText="Texto de ejemplo." />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="profileImage" fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/user.png" />
                     </image>
                  </ImageView>
                  <VBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity">
                     <children>
                        <Label fx:id="nicknameLabel" text="Nombre de Usuario" />
                        <Label fx:id="usernameLabel" text="\@Arroba usuario" />
                     </children>
                  </VBox>
                  <FlowPane fx:id="filterFlow" focusTraversable="true" hgap="5.0" maxWidth="1.7976931348623157E308" prefWrapLength="0.0" vgap="5.0" HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="addFilterButton" contentDisplay="GRAPHIC_ONLY" onAction="#onAddFilterAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-plus-circle" iconSize="16" />
                     </graphic>
                  </JFXButton>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </center>
   <bottom>
      <JFXButton fx:id="sendButton" onAction="#onSendAction" text="Enviar" BorderPane.alignment="CENTER_RIGHT" />
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
