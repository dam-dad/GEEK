<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="view" maxHeight="10000.0" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="5.0">
         <children>
            <JFXTextField fx:id="searchUserText" prefColumnCount="17" promptText="Busca un usuario" HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="searchButton" contentDisplay="GRAPHIC_ONLY" onAction="#onSearchAction">
               <graphic>
                  <FontIcon iconLiteral="fas-search" iconSize="14" />
               </graphic>
            </JFXButton>
         </children>
         <VBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </VBox.margin>
      </HBox>
      <JFXComboBox fx:id="searchFiltersComboBox" maxWidth="1.7976931348623157E308" promptText="Selecciona un filtro" />
      <ScrollPane fx:id="searchResultContainerPane">
        <content>
            <BorderPane>
               <center>
                  <VBox fx:id="searchResultContainer" maxWidth="200.0" />
               </center>
            </BorderPane>
        </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
