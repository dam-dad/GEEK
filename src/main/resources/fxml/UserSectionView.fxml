<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="view" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <JFXButton fx:id="editButton" contentDisplay="RIGHT" text="Editar">
               <graphic>
                  <FontIcon iconLiteral="mdi2l-lead-pencil" iconSize="16" />
               </graphic>
            </JFXButton>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <ImageView fx:id="profileImage" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/user.png" />
               </image></ImageView>
            <VBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="SOMETIMES">
               <children>
                  <Label fx:id="usernameLabel" text="Nombre de Usuario">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="usercodeLabel" text="Código de Usuario">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Filtros seguidos:" />
            <Label fx:id="filterNumberLabel" text="0" />
            <JFXButton fx:id="verMasButton" text="Ver más" />
         </children>
      </HBox>
   </children>
</VBox>
