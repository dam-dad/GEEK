<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="view" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane>
         <right>
            <JFXButton fx:id="editButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#onEditAction" text="Editar" BorderPane.alignment="CENTER">
               <graphic>
                  <FontIcon iconLiteral="mdi2l-lead-pencil" iconSize="16" />
               </graphic>
            </JFXButton>
         </right>
         <left>
            <JFXButton fx:id="backButton" contentDisplay="GRAPHIC_ONLY" onAction="#onBackAction" text="Button" BorderPane.alignment="CENTER">
               <graphic>
                  <FontIcon iconLiteral="mdi2a-arrow-left" iconSize="24" />
               </graphic>
               <BorderPane.margin>
                  <Insets left="5.0" />
               </BorderPane.margin>
            </JFXButton>
         </left>
         <VBox.margin>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </BorderPane>
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
         <children>
            <ImageView fx:id="profileImage" fitHeight="64.0" fitWidth="64.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../images/user.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="NEVER">
               <children>
                  <Label fx:id="nicknameLabel" text="Nombre de Usuario">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="usernameLabel" text="Código de Usuario">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Filtros seguidos:" />
            <Label fx:id="filterNumberLabel" text="0" />
            <JFXButton fx:id="verMasButton" onAction="#onShowMoreAction" text="Ver más" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <ScrollPane fx:id="postContainerPane" fitToHeight="true" fitToWidth="true" hmin="180.0" minWidth="200.0" pannable="true" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
