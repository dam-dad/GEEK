<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="180.0" prefWidth="180.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox focusTraversable="true" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <FlowPane fx:id="filterFlow" focusTraversable="true" hgap="5.0" vgap="5.0" VBox.vgrow="ALWAYS" />
            <Label fx:id="contentLabel" text="texto de ejemplo" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton contentDisplay="GRAPHIC_ONLY" onAction="#onOpenUserAction">
               <graphic>
                  <ImageView fx:id="profileImage" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/user.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <VBox minHeight="-Infinity" minWidth="-Infinity">
               <children>
                  <Label fx:id="usernameLabel" text="Nombre de Usuario" />
                  <Label fx:id="arrobaLabel" text="\@Arroba usuario" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
